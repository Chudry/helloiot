<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane fx:id="container" styleClass="unitform" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.161" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints maxHeight="1.7976931348623157E308" minHeight="10.0" />
   </rowConstraints>
   <children>
      <Label text="%label.name" styleClass="unitlabel" />
      <TextField fx:id="name" styleClass="unitinput" GridPane.rowIndex="1" />
      <TextArea fx:id="code" maxHeight="1.7976931348623157E308" prefHeight="400.0" GridPane.rowIndex="2">
        <styleClass>
           <String fx:value="unitinputarea" />
           <String fx:value="unitinputcode" />
        </styleClass>             
         <font>
            <Font name="Monospaced Regular" size="13.0" />
         </font></TextArea>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
