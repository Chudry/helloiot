<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import java.lang.*?>
<?import javafx.scene.layout.*?>

<fx:root maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" type="VBox" GridPane.hgrow="SOMETIMES" GridPane.vgrow="SOMETIMES" xmlns="http://javafx.com/javafx/8.0.72" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <Label fx:id="field" styleClass="fieldlabel" />
      <BorderPane VBox.vgrow="SOMETIMES">
         <center>
            <TextArea fx:id="payload" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="100.0" styleClass="fieldtextbox" BorderPane.alignment="CENTER" />
         </center>
         <right>
            <Button fx:id="fireaction" focusTraversable="false" mnemonicParsing="false" onAction="#onSendEvent" BorderPane.alignment="TOP_CENTER">
               <BorderPane.margin>
                  <Insets left="5.0" />
               </BorderPane.margin></Button>
         </right>
      </BorderPane>
   </children>
</fx:root>
