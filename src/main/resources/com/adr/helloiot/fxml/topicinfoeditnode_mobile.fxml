<GridPane fx:id="container" hgap="10.0" vgap="10.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <columnConstraints>
      <ColumnConstraints hgrow="SOMETIMES" />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
      <RowConstraints />
      <RowConstraints minHeight="10.0" prefHeight="30.0" />
   </rowConstraints>
   <children>
      <Label text="%label.name" styleClass="unitlabel" />
      <TextField fx:id="editname" styleClass="unitinput" GridPane.rowIndex="1" />       
      <Label text="%label.page" styleClass="unitlabel" GridPane.rowIndex="2" />
      <ComboBox fx:id="editpage" styleClass="unitcombobox" editable="true" maxWidth="1.7976931348623157E308" GridPane.rowIndex="3" />
      <Label text="%label.topic" styleClass="unitlabel" GridPane.rowIndex="4" />
      <TextField fx:id="edittopic" styleClass="unitinput" GridPane.rowIndex="5" />
      <Label text="%label.topicpub" styleClass="unitlabel" GridPane.rowIndex="6" />
      <TextField fx:id="edittopicpub" styleClass="unitinput" GridPane.rowIndex="7" />
      <Label text="%label.format" styleClass="unitlabel" GridPane.rowIndex="8" />
      <ChoiceBox fx:id="editformat" styleClass="unitinput" maxWidth="1.7976931348623157E308" GridPane.rowIndex="9" />
      <Label text="%label.jsonpath" styleClass="unitlabel" GridPane.rowIndex="10" />
      <TextField fx:id="editjsonpath" styleClass="unitinput" GridPane.rowIndex="11" />
      <Label text="%label.color" styleClass="unitlabel" GridPane.rowIndex="12" />
      <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.rowIndex="13">
         <children>
            <ColorPicker fx:id="editcolor" styleClass="unitinput" maxWidth="1.7976931348623157E308" HBox.hgrow="SOMETIMES" />
            <Button fx:id="clearcolor" styleClass="unitbutton" mnemonicParsing="false" onAction="#onClearColor" />
         </children>
      </HBox>
      <Label text="%label.background" styleClass="unitlabel" GridPane.rowIndex="14" />
      <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.rowIndex="15">
         <children>
            <ColorPicker fx:id="editbackground" styleClass="unitinput" maxWidth="1.7976931348623157E308" HBox.hgrow="SOMETIMES" />
            <Button fx:id="clearbackground" styleClass="unitbutton" mnemonicParsing="false" onAction="#onClearBackground" />
         </children>
         <GridPane.margin>
            <Insets />
         </GridPane.margin>
      </HBox>
      <CheckBox fx:id="editmultiline" styleClass="unitcheckbox" mnemonicParsing="false" text="%label.multiline" GridPane.rowIndex="16" />
      <Label maxWidth="1.7976931348623157E308" styleClass="unitsection" text="%label.extendedproperties" GridPane.columnSpan="2147483647" GridPane.rowIndex="17" />
      <Label text="%label.qos" styleClass="unitlabel" GridPane.rowIndex="18" />
      <ChoiceBox fx:id="editqos" styleClass="unitinput" maxWidth="1.7976931348623157E308" GridPane.rowIndex="19" />
      <Label text="%label.retained" styleClass="unitlabel" GridPane.rowIndex="20" />
      <ChoiceBox fx:id="editretained" styleClass="unitinput" maxWidth="1.7976931348623157E308" GridPane.rowIndex="21" />
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</GridPane>
